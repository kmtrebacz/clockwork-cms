{% extends "base.twig" %}

{% set nav = true %}

{% block title %}Dashboard{% endblock %}

{% block head %}
    <link rel="stylesheet" href="assets/css/dashboard.css">
{% endblock %}

{% block content %}
    {% for card in cards %}
        <div class="card">
            <div class="card-header">
                <h3>{{ card.heading }}</h3>
            </div>
            <div class="card-body">
                {{ card.content | raw }}
            </div>
        </div>
    {% endfor %}
{% endblock %}
